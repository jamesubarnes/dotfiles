" =============================================================================
" General
" =============================================================================
set nocompatible
set backspace=indent,eol,start
set esckeys
set ttyfast
set modeline
set modelines=4

" =============================================================================
" UI
" =============================================================================
set laststatus=2
set ruler
set showmode
set showcmd
set wildmenu
set scrolloff=3

" =============================================================================
" Colors & Syntax
" =============================================================================
syntax on
set re=0
set termguicolors
" git clone https://github.com/catppuccin/vim.git ~/.vim/pack/plugins/start/catppuccin
colorscheme catppuccin_mocha

" =============================================================================
" Indentation
" =============================================================================
set noexpandtab
set tabstop=2
set shiftwidth=2

" =============================================================================
" Search
" =============================================================================
set hlsearch
set ignorecase
set incsearch

" =============================================================================
" Key Mappings
" =============================================================================
let mapleader=","

" =============================================================================
" Autocommands
" =============================================================================
if has("autocmd")
  filetype on
endif
